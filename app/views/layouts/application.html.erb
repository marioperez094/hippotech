<!DOCTYPE html>
<html>
  <head>
    <% if content_for? :head %>
      <%= yield :head %>
    <% else %>
      <title>Hippotech | Charting Solution</title>
      <meta name="description" content="Try Hippotech to experience an easier way to chart!"/>
    <% end %>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Satisfy', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
